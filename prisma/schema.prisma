// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  email     String  @unique
  password  String
  active    Boolean @default(true)
  name      String?
  role      String
  tokens    Token[]
}

model Token {
  id              String  @id
  user            User?   @relation(fields: [userId], references: [id])
  refreshToken    String
  userId          String?
  device          String?
  expiration      DateTime
}